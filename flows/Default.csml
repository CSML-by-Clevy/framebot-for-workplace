selectFrame:
  /**
   * Update the available frames in the section below!
   * Frames must be in PNG format, at a publicly-available address.
   */
  do valise_url = "https://bit.ly/clevy-frame-vacances"
  do plage_url = "https://bit.ly/clevy-frame-plage"
  do feuilles_url = "https://bit.ly/clevy-frame-summer"
  do blm_url = "https://bit.ly/clevy-frame-blm"
  do transform_url = "https://bit.ly/clevy-frame-transform"

  say Carousel(Shuffle([
    Card(
      "Les vacances",
      subtitle="Choisir la valise pour montrer que tu es en cong√©s !",
      image_url=valise_url,
      buttons=[Button("S√©lectionner", payload="valise") as valise]
    ),
    Card(
      "La plage",
      subtitle="Si tu prends des vacances √† la mer, choisis ce cadre !",
      image_url=plage_url,
      buttons=[Button("S√©lectionner", payload="plage") as plage]
    ),
    Card(
      "Les feuilles",
      subtitle="Enfin l'√©t√© ! Ces feuilles vont √©gayer ta photo...",
      image_url=feuilles_url,
      buttons=[Button("S√©lectionner", payload="feuilles") as feuilles]
    ),
    Card(
      "Black Lives Matter",
      subtitle="Montrez votre soutien au mouvement #BLM",
      image_url=blm_url,
      buttons=[Button("S√©lectionner", payload="blm") as blm]
    ),
    Card(
      "WP Transform",
      subtitle="Je suis √† Workplace Transform",
      image_url=transform_url,
      buttons=[Button("S√©lectionner", payload="transform") as transform]
    ),
  ]))
  hold

  if (event match valise) remember frame_url = valise_url
  else if (event match plage) remember frame_url = plage_url
  else if (event match feuilles) remember frame_url = feuilles_url
  else if (event match transform) remember frame_url = transform_url
  else if (event match blm) remember frame_url = blm_url
  else {
    say "Je n'ai pas compris... choisis un des cadres propos√©s !"
    goto selectFrame
  }

  do framed = Fn(
    "picture_frame",
    base_url=userpic,
    frame_url=frame_url
  )

  remember framed_url = framed.result

  say "Voil√†, ton image est pr√™te !"
  say Image(framed_url)
  say Wait(3000)
  say Typing(1500)
  say "Mets-la en photo de profil pour que tes coll√®gues puissent l'admirer plus facilement !"
  say Wait(3000)

  say Typing(1500)
  say Question(
    "Reviens me voir r√©guli√®rement pour avoir de nouveaux cadres ! A bient√¥t üëã",
    button_type="quick_reply",
